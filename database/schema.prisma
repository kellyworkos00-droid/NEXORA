// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id          String   @id @default(uuid())
  name        String
  subdomain   String   @unique
  plan        String   @default("free") // free, growth, pro, enterprise
  status      String   @default("active") // active, trial, suspended, cancelled
  settings    Json     @default("{}")
  whiteLabel  Json?    @map("white_label")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  users       User[]
  customers   Customer[]
  deals       Deal[]
  activities  Activity[]

  @@map("tenants")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String    @map("password_hash")
  name          String
  avatar        String?
  tenantId      String    @map("tenant_id")
  role          String    @default("user") // super_admin, admin, manager, user, guest
  status        String    @default("active") // active, inactive, suspended
  emailVerified Boolean   @default(false) @map("email_verified")
  lastLogin     DateTime? @map("last_login")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  tenant         Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  refreshTokens  RefreshToken[]
  createdCustomers Customer[]   @relation("CreatedBy")
  assignedDeals  Deal[]         @relation("AssignedTo")
  createdActivities Activity[]  @relation("CreatedBy")
  assignedActivities Activity[] @relation("AssignedTo")

  @@index([email])
  @@index([tenantId])
  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}

model Customer {
  id           String   @id @default(uuid())
  tenantId     String   @map("tenant_id")
  name         String
  email        String?
  phone        String?
  company      String?
  status       String   @default("lead") // lead, prospect, active, churned
  tags         String[]
  customFields Json     @default("{}") @map("custom_fields")
  createdBy    String?  @map("created_by")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  tenant     Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  creator    User?      @relation("CreatedBy", fields: [createdBy], references: [id])
  deals      Deal[]
  activities Activity[]

  @@index([tenantId])
  @@index([email])
  @@map("customers")
}

model Deal {
  id                String    @id @default(uuid())
  tenantId          String    @map("tenant_id")
  customerId        String    @map("customer_id")
  title             String
  value             Decimal   @db.Decimal(12, 2)
  stage             String    @default("qualification") // qualification, proposal, negotiation, closed_won, closed_lost
  probability       Int?
  expectedCloseDate DateTime? @map("expected_close_date") @db.Date
  assignedTo        String?   @map("assigned_to")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")
  closedAt          DateTime? @map("closed_at")

  tenant     Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  customer   Customer   @relation(fields: [customerId], references: [id], onDelete: Cascade)
  assignee   User?      @relation("AssignedTo", fields: [assignedTo], references: [id])
  activities Activity[]

  @@index([tenantId])
  @@index([customerId])
  @@index([stage])
  @@map("deals")
}

model Activity {
  id          String    @id @default(uuid())
  tenantId    String    @map("tenant_id")
  customerId  String?   @map("customer_id")
  dealId      String?   @map("deal_id")
  type        String    // call, email, meeting, task, note
  subject     String
  description String?
  dueDate     DateTime? @map("due_date")
  completed   Boolean   @default(false)
  assignedTo  String?   @map("assigned_to")
  createdBy   String?   @map("created_by")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  tenant   Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  customer Customer? @relation(fields: [customerId], references: [id], onDelete: Cascade)
  deal     Deal?     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  assignee User?     @relation("AssignedTo", fields: [assignedTo], references: [id])
  creator  User?     @relation("CreatedBy", fields: [createdBy], references: [id])

  @@index([tenantId])
  @@index([customerId])
  @@map("activities")
}
